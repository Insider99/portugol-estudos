algoritmo "MeuPrimeiroAlgoritmoNoLinux!"
var
   nome:caracter
   idade:inteiro
   peso:real
   casado:logico
inicio
      escreval("Digite seu nome:")
      leia(nome)
      escreval("Digite sua idade:")
      leia(idade)
      escreval("Digite seu peso:")
      leia(peso)
      escreval("Olá ",nome,", sua idade é",idade," e seu peso é",peso,"kg!")
fimalgoritmo